@using VK_Analyze.Models
@model UserFriendsView

@{ 
     ViewBag.Title = "Друзья";

}

<div class="panel-default">
    @Html.BeginForm("Friends","Home",FormMethod.Get,new { @class = "form-horizontal"})
    {
        <h3>Список друзей</h3>
        @Html.TextBoxFor(m=>m.UserID,"", new { @class = "input-xlarge" })
    }

   
    <div class="container">
        @foreach (VkNet.Model.User item in ViewBag.Users)
        {
            <div class="row">
                <div class="col-md-3"><img src="@item.Photo100" alt="Ваше фото"/></div>
                <div class="col-md-3">@item.Id</div>
                <div class="col-md-3">@item.FirstName @item.LastName</div>
                

            </div>
        }
        
    </div>
</div>
