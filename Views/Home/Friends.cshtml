@using VK_Analyze.Models
@using VK_Analyze.Controllers.supportFunction;
@model UserFriendsView



@{
    ViewBag.Title = "Друзья";

    List<CityInfo> citys = ViewBag.Citys;
    citys = (from x in citys orderby x.CountFriends descending select x).ToList();


    float countCitys = 0;
    foreach (CityInfo item in citys)
    {
        countCitys += item.CountFriends;
    }

    double percent = 0;



}

<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @using (Html.BeginForm("Friends", "Home", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    <h4>Введите ID пользователя, которого нужно просканировать.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.ScreenName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.ScreenName, new { @class = "form-control" })
                            <p><input type="submit" value="Проверить" /></p>
                        </div>
                    </div>
                    }
                </div>


                <hr />

                <h4>Информация</h4>


                <div class="row">

                    @foreach (CityInfo city in citys)
            {
                percent = Math.Round(city.CountFriends / countCitys, 4) * 100;
                if (percent > 1)
                {
                    <div class="row">
                        <div class="col-md-10">
                            <div style="font-size:@MathFunctions.Clamp((int)percent,10,70)px">
                                <div class="col-md-8">@city.City</div>
                                <div class="col-md-2">@percent%</div>
                            </div>
                        </div>
                    </div>
                        }
                    }
                </div>
            </div>
            <div class="col-md-6">
                <script type="text/javascript">
                    google.charts.load('current', { 'packages': ['corechart'] });
                    google.charts.setOnLoadCallback(drawChart);

                    function drawChart() {

                        @Html.Raw(ViewBag.js_arrayFriends);

                        var options = {
                            title: 'Диаграмма соотношения городов к общей численности'
                        };

                        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

                        chart.draw(data, options);
                    }
                </script>
                <div id="piechart" style="width: 900px; height: 500px;"></div>
            </div>
        </div>
    </div>
</div>
